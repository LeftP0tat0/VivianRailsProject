<h1>All Books</h1>

    <%= form_for :book, url: "/index", method: "post"  do |f|%>

        <%= f.select :desired_attribute, ['all', 'Short Names', 'Long Names']%>

        <%= f.submit "Select" %>

    <% end %>    
    
        <% if @params == 'Short Names' %>
            <% @books.with_short_name.each do |book| %>
                <h2><%= link_to book.name, user_book_path(current_user.id, book.id) %></h2>
                <p>
                <%= link_to "Edit", edit_book_path(book) %> |
                <%= link_to "Delete", book, :method => :delete %>
        
                </p> 
                <hr />
            <% end %>
        <% elsif @params == 'Long Names' %> 
            <% @books.with_long_name.each do |book| %>
                <h2><%= link_to book.name, user_book_path(current_user.id, book.id) %></h2>                <p>
                <%= link_to "Edit", edit_book_path(book) %> |
                <%= link_to "Delete", book, :method => :delete %>
        
                </p> 
                <hr />
                <% end %>
        <% else %>
            <% @books.each do |book| %>
                <h2><%= link_to book.name, user_book_path(current_user.id, book.id) %></h2>
                <p>
                <%= link_to "Edit", edit_book_path(book) %> |
                <%= link_to "Delete", book, :method => :delete %>
        
                </p> 
                <hr />
            <% end %>
        <% end %>
        
